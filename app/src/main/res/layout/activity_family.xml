<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".FamilyActivity">

    <TextView
        android:id="@+id/family_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:text="Family Data."
        android:textColor="@color/colorTitleText"
        android:textSize="40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@id/family_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="14dp"
            android:layout_weight="1"
            android:backgroundTint="#6DA2A2"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_height="0dp"
                    android:text="Abram"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="0dp">

                    <TextView
                        android:id="@+id/fm_1_1"
                        android:text="-"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fm_1_2"
                        android:text="-"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fm_1_3"
                        android:text="-"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fm_1_4"
                        android:text="-"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#CBC7AE"
            android:layout_margin="14dp"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="0dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="Advik"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="0dp">

                    <TextView
                        android:text="-"
                        android:id="@+id/fm_2_1"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="-"
                        android:id="@+id/fm_2_2"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="-"
                        android:id="@+id/fm_2_3"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="-"
                        android:id="@+id/fm_2_4"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="14dp"
            android:backgroundTint="#789B68"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/fm_1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_height="0dp"
                    android:text="Akarsh"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="0dp">

                    <TextView
                        android:id="@+id/fm_3_1"
                        android:text="-"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fm_3_2"
                        android:text="-"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fm_3_3"
                        android:text="-"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fm_3_4"
                        android:text="-"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="14dp"
            android:backgroundTint="#D58D6F"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="Anay"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="0dp">

                    <TextView
                        android:id="@+id/fm_4_1"
                        android:text="-"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fm_4_2"
                        android:text="-"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fm_4_3"
                        android:text="-"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fm_4_4"
                        android:text="-"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

